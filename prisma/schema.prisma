// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name      String
  email     String   @unique
  createdAt DateTime @default(now()) @map("created_at")

  userIDPs    UserIDP[]
  createdRooms Room[]     @relation("CreatedRooms")
  joinedRooms  RoomUser[]

  @@map("users")
}

model Room {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  createdBy String   @map("created_by") @db.Uuid

  users     RoomUser[]
  creator   User       @relation("CreatedRooms", fields: [createdBy], references: [id])

  @@map("rooms")
}

model RoomUser {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  
  // @mapを外し、フィールド名自体をDBのカラム名(room_id)に合わせる
  room_id   String   @db.Uuid
  user_id   String   @db.Uuid
  
  createdAt DateTime @default(now()) @map("created_at")

  // リレーションの定義を修正（fieldsの名前を上記に合わせる）
  // ここの名前を 'room' ではなく 'rooms' などに変えると、Realtimeとの混同をさらに防げます
  room      Room     @relation(fields: [room_id], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([room_id, user_id])
  @@map("room_users")
}

model UserIDP {
  id          String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  supabaseUid String @unique @map("supabase_uid") @db.Uuid
  userId      String @map("user_id") @db.Uuid

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_idp")
}
